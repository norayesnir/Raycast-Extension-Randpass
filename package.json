{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "randpass",
  "title": "Random Password Generator",
  "description": "Generate secure passphrases from EFF wordlist",
  "icon": "lock.png",
  "author": "norayesnir",
  "license": "MIT",
  "version": "1.0.0",
  "commands": [
    {
      "name": "generate-password",
      "title": "Generate Password",
      "description": "Generate a random password and copy to clipboard",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.104.6",
    "@raycast/utils": "^2.2.2"
  },
  "devDependencies": {
    "@eslint/js": "^8.57.1",
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "^20.19.33",
    "@types/react": "^18.3.28",
    "eslint": "^8.57.1",
    "globals": "^17.3.0",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
